body {
	padding-top: 10px;
	background: #202020;
	font-size: 0.8em;
	font-family: "Helvetica Neue","Helvetica";
}
#wrapper {
	margin: 10px;
	padding: 10px;
	background: #303030;
}

#wrapper div {
	padding: 0px;
	margin: 0px;
}

h1 {
	color: #C0C0C0;
	margin-top: 0px;
	margin-bottom: 0px;
}

h2 {
	color: #A0A0A0;
	margin-top: 0px;
	margin-bottom: 0px;
	padding-bottom: 0px;
}

a {
	color: #C0C0F0;
	text-decoration: none;
}
a:hover, a:focus {
	color: #C0C0F0;
	text-decoration: underline;
}

ul {
	padding-left: 0px;
}

img {
	border: 0px solid #000000;
}

img.thumb {
	height: 100px;
	margin: 5px;
}
#preview {
	position: absolute;
	background-color: #CCC;
	border: 10px solid #CCC;
	top: 10px;
	left: 10px;
	/*-moz-border-radius: 1.7em;
	-webkit-border-radius: 1.7em;*/
	border-radius: 1.7em;
	margin-top: 0px;
	margin-bottom: 0px;
	margin-left: auto;
	margin-right: auto;
}
#preview_link {
	text-decoration: none;
}
#preview_image {
	padding-right: 10px;
}

li.directory {
	/*background: url(http://duckinator.net/icons/folder.png) center left no-repeat;*/
	height: 16px;
	padding-top: 5px;
	padding-left: 25px;
	list-style: none;
}

li.folder {
	background: url(http://duckinator.net/icons/folder.png) center left no-repeat;
	height: 16px;
	padding-top: 5px;
	padding-left: 25px;
	list-style: none;
}

li.nofolder {
	height: 16px;
	padding-top: 5px;
	margin-left: 25px;
}

ul#directories li.subdir {
	padding-top: 5px;
	padding-left: 50px;
	list-style: none;
	color: #C0C0B0;
}

ul#directories li.subdir ul li.subdir {
	padding-left: 24px;
}

#slideshow_link {
	background: url(http://duckinator.net/icons/presentation.png) center left no-repeat;
	height: 16px;
	padding-top: 5px;
	padding-left: 25px;
	display: block;
}

li.thumbnail {
	list-style: none;
	display: inline;
}

#footer {
	color: #fff;
	height: 31px;
}

#footer p {
	float: left;
}

#footer img {
	height: 31px;
	width: 88px;
	border: 0px;
	float: right;
}
